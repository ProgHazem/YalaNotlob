<h2 class="text-center">Yallanotlob</h2>
<div class="register text-center login">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form") do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: "form-control friendemail"  %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control friendemail"  %>
  </div>

  <div class="field" style="margin:auto">
    <%= f.file_field :avatar,class:"file form-control friendemail " %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" , class: "form-control friendemail" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control friendemail"  %>
  </div>

  <div class="actions">
    <%= f.submit "Register",class: "btn btn-primary friend-head-add" %>
  </div>

<% end %>

<%= render "devise/shared/links",class: "btn btn-success", :layout => false  %>
</div>

<h2>Resend unlock instructions</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "form" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control friendemail" %>
  </div>

  <div class="actions">
    <%= f.submit "Resend unlock instructions", class: "btn btn-danger friend-head-add" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

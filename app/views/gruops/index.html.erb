
  <h1 class="alert-heading friend-head">Groups</h1>
  <table class="table table-bordered table-hover table-responsive">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>User</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @gruops.each do |gruop| %>
      <tr>
        <td><%= gruop.id %></td>
        <td><%= gruop.name %></td>
        <td><%= gruop.user.name %></td>
        <%if(@user==current_user)%>
        <td><%= link_to 'Show', user_gruop_path(gruop.user,gruop) , class: "btn btn-primary"%></td>
        <td><%= link_to 'Edit', edit_user_gruop_path(@user,gruop) , class: "btn btn-success"%></td>
        <td><%= link_to 'Destroy', [@user,gruop], method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gruop', new_user_gruop_path , class: "btn btn-primary"%>

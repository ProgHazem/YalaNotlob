<!DOCTYPE html>
<html>
  <head>
    <style>
    </style>
    <title>Yala Notlob</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('image-name.png') %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'cable', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#app-nav" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <div class="collapse navbar-collapse" id="app-nav">

  <ul class="nav navbar-nav">
        <% if user_signed_in? %>

        <li><%= link_to 'Home', user_orders_path(@user) %></li>
        <li><%= link_to 'Friends', search_path %></li>
        <li><%= link_to 'Groups', user_gruops_path(@user) %></li>
        <li><%= link_to 'Orders', user_orders_path(@user) %></li>
        <li>
          <%= render "notification_center", notifications: @notifications %>
        </li>
          <li style="float:right">
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
          </li>

          <li style="float:right">
            <a>Logined as : <%= @user.name %></a>
          </li>
        <% else %>
          <li style="float:right">
          <%= link_to('Login', new_user_session_path)  %>
          </li>
        <% end %>


      </ul>

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

  
  <div role="alert">
      <p id="notice"><%= notice %></p>  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span></button>
  </div>
    <%= yield %>
  </body>
</html>

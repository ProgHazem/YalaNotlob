<%= form_for [@user,@order] do |f| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>
      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 <div class="alert alert-success center" role="alert">

  <div class="form-group row">
    <div class="col-sm-10">
    <select class="form-control friend-head-add" id="order_name" name="order[name]">
      <option selected>Choose Your Meal</option>
      <option value="breakfast">Breakfast</option>
      <option value="lunch">Lunch</option>
      <option value="dinner">Dinner</option>
    </select>
  </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10">
       <%= f.text_field :restaurant, {:class => 'form-control friend-head-add', :placeholder => "Enter Restaurant"} %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10">
      <%= f.text_field :user_name, data: {autocomplete_source: users_path}, :class => "form-control friend-head-add", :placeholder => "Search for Friends to invite"%>
    </div>
  </div>
  <div class="field">
    <ul id="added">

    </ul>
</div>
 <div class="custom-file row">
  <div class="col-sm-10">
     <label class="custom-file-label" for="validatedCustomFile">Choose Menu Image file...</label>
   </div>
      <div class="col-sm-10">
      <%= f.file_field :avatar , {:class => 'custom-file-input form-control friend-head-add'}%>
    </div>
  </div>
  <br>
  <div class="action row">
  <div class="col-sm-10">
  <%= f.submit 'Create', :class => 'btn btn-primary friend-head-add'%>
</div>
  </div>
<% end %>
</div>
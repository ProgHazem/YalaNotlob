<div class="text-center">
    <div class="alert alert-success" role="alert">
      <h3 class="alert-heading">Orders</h3>
  </div>
  </div>

  <table class="table table-bordered table-hover table-responsive">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Order</th>
      <th scope="col">Restaurant</th>
      <th scope="col">Status</th>
      <th scope="col" colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% i=1 %>
    <% @orders.each do |order| %>
    <% if order.status != "cancelled" %>
      <tr>
        <th scope="row"><%= i %></th>
        <td><%= order.name %></td>
        <td><%= order.restaurant %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'View', user_order_path(order.user,order.id), class: "btn btn-primary" %></td>
        <% if order.status != "finished" %>


        <td><%= link_to 'finish', edit_user_order_path(order.user,order.id), class: "btn btn-success" %></td>
        <td><%= link_to 'Cancel', user_order_path(order.user,order.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        <% end %>
      </tr>
       <% i = i + 1 %>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_user_order_path(@user), class: "btn btn-primary" %>
